<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:context="http://www.springframework.org/schema/context"
	xmlns:jpa="http://www.springframework.org/schema/data/jpa"
	xsi:schemaLocation="
        http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
        http://www.springframework.org/schema/context
        http://www.springframework.org/schema/context/spring-context-3.0.xsd
        http://www.springframework.org/schema/data/jpa
        http://www.springframework.org/schema/data/jpa/spring-jpa.xsd"
	default-lazy-init="true">
	
	<context:annotation-config/>
	<context:component-scan base-package="projeto.spring.data.model"/>
	
	
	<!-- Definir uma conexão com o banco de dados -->
	<bean id="dataSource" class="org.springframework.jdbc.datasource.DriverManagerDataSource">
		
		<!-- Driver do postgres -->
		<property name="driverClassName" value="org.postgresql.Driver"/>
		
		<!-- URL do banco de dados -->
		<property name="url" value="jdbc:postgresql://localhost:5432/spring-data-teste-aula"></property>
		
		<!-- Login  -->
		<property name="username" value="postgres"></property>
		
		<!-- Senha -->
		<property name="password" value="admin"></property>
		
	</bean>
	
	
	<!-- Definindo as configurações do JPA -->
	<bean id="entityManagerFactory" 
	class="org.springframework.orm.jpa.LocalContainerEntityManagerFactoryBean" scope="singleton">
	
		<!-- Fazemos uma referência ao DataSource do banco de dados feito anteriormente -->
		<property name="dataSource" ref="dataSource"></property>
		
		<property name="jpaVendorAdapter">
			
			<bean class="org.springframework.orm.jpa.vendor.HibernateJpaVentorAdapter">
				<!-- Onde entra as propriedades tipo a do Hibernate -->
				
				<property name="database" value="POSTGRESQL"/>
				
				<!-- Gera automaticamente as tabelas -->
				<property name="generateDdl" value="true"></property>
				
				
			</bean>
			
		</property>
		
		<!-- Unidade de persistência -->
		<!-- O valor virá do arquivo de persistência "persistence.xml" -->
		<property name="persistenceUnitName" value="projeto-spring-data-aula"/>
	
	</bean>
	
	<!-- Ativar controle transacional -->
	<bean id="transactionManager" 
	class="org.springframework.orm.jpa.JpaTransactionManager" scope="singleton">
		
		<!-- Vamos fazer uma referencia ao entityManager criado para o JPA( entityManagerFactory )-->
		<property name="entityManagerFactory" ref="entityManagerFactory"></property>
		
	</bean>
	
	
	
	
	
	
	
	
	
	
	
	
	
	
	
	
	
	
	
	
	
	
		
	
	<jpa:repositories base-package="projeto.spring.data.dao"/>
	
</beans>